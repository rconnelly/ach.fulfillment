@using Ach.Fulfillment.Web.Common
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - ACH Fulfllment</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        @Styles.Render("~/Content/themes/base/css", "~/Content/bootstrap/css", "~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <div class="navbar navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container-fluid">
                    <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </a>
                    <a class="brand" href="@Url.RouteUrl(new { area = "Common", controller = "Home", action = "Index" })">ACH Fulfillment</a>
                    
                    @Html.Partial("_LoginPartial")
                    
                    @{ 
                        var currentAction = this.ViewContext.RouteData.GetRequiredString("action");
                        // var currentController = this.ViewContext.RouteData.GetRequiredString("controller");
                        Func<string, string> checkCurrentMenuItem = s => s == currentAction ? "class=\"active\"" : string.Empty;
                    }
                    <div class="nav-collapse">
                        <ul class="nav">
                            <li @Html.Raw(checkCurrentMenuItem("Index"))>@Html.ActionLink("Home", "Index", "Home", new { area = "Common" }, null)</li>
                            <li @Html.Raw(checkCurrentMenuItem("About"))>@Html.ActionLink("About", "About", "Home", new { area = "Common" }, null)</li>
                            <li @Html.Raw(checkCurrentMenuItem("Contact"))>@Html.ActionLink("Contact", "Contact", "Home", new { area = "Common" }, null)</li>
                        </ul>
                    </div><!--/.nav-collapse -->

                </div>
            </div>
        </div>
        
        <div class="container">
        
            <div class="row">
                <div class="span3">
                    <div class="well sidebar-nav">
                        <ul class="nav nav-list">
                            <li class="nav-header">Security</li>
                            <li class="active"><a href="#">Users</a></li>
                            <li><a href="#">Roles</a></li>
                            <li><a href="#">Permissions</a></li>
                            <li class="nav-header">Partner management</li>
                            <li><a href="#">Partners</a></li>
                        </ul>
                    </div><!--/.well -->
                </div><!--/span-->
                <div class="span9" id="body">
                    @RenderSection("featured", required: false)
                    <section class="content-wrapper main-content">
                    @RenderBody()
                    </section>
                </div><!--/span-->
            </div><!--/row-->
            
            <hr>

            <footer>
                <div class="pull-right">
                    <a class="brand" href="http://quad.io">
                        <img src="~/Images/header_logo.png" alt="Quad.IO" />
                    </a>
                </div>
                <p>&copy; Copyright 2012, Quad IO, Inc.</p>
            </footer>

        </div><!--/.container-->        
       
        @Scripts.Render("~/bundles/jquery", "~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    </body>
</html>
