@model Ach.Fulfillment.Web.Areas.Manage.Models.UserModel

@{
    ViewBag.Title = "Edit User";
}

@using (Html.BeginForm("Edit", "User", new {area = "Manage"})) {
    <fieldset>
        <legend>Edit User</legend>

        @Html.Partial("_userDetails", this.Model)
        
        <div class="btn-toolbar">
            <div class="btn-group">
                <input type="submit" value="Update" class="btn btn-large" />
                @Html.ActionLink("Change Password", "List", "User", new { @class = "btn btn-large", onclick="return alert('not implemented yet');" })
                @Html.ActionLink("Back to List", "List", "User", new { @class = "btn btn-large" })
             </div>
        </div>
    </fieldset>
}

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
