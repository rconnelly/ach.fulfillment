<?xml version="1.0" encoding="UTF-8"?>

<job-scheduling-data xmlns="http://quartznet.sourceforge.net/JobSchedulingData" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.0">

  <processing-directives>
    <overwrite-existing-data>true</overwrite-existing-data>
  </processing-directives>

  <schedule>

    <job>
      <name>GenerateAchFilesJob</name>
      <group>AchFulfillmentGroup</group>
      <description>Generate AchFiles Job</description>
      <job-type>Ach.Fulfillment.Scheduler.Jobs.GenerateAchFilesJob, Ach.Fulfillment.Scheduler</job-type>
      <job-data-map>
        <entry>
          <key>AchFilesStore</key>
          <value>D:\</value>
        </entry>
        <entry>
          <key>FtpHost</key>
          <value></value>
        </entry>
        <entry>
          <key>UserId</key>
          <value></value>
        </entry>
        <entry>
          <key>Password</key>
          <value></value>
        </entry>
      </job-data-map>
    </job>

    <!-- todo (ng): job does not contain associated trigger -->
    <job>
      <name>CheckStatusFilesJob</name>
      <group>AchFulfillmentGroup</group>
      <description>Check Status FilesJ ob</description>
      <job-type>Ach.Fulfillment.Scheduler.Jobs.CheckStatusFilesJob, Ach.Fulfillment.Scheduler</job-type>
    </job>

    <job>
      <name>CleanUpTransactionsJob</name>
      <group>AchFulfillmentGroup</group>
      <description>Clean Up Transactions Job</description>
      <job-type>Ach.Fulfillment.Scheduler.Jobs.CleanUpTransactionsJob, Ach.Fulfillment.Scheduler</job-type>
    </job>

    <trigger>
      <simple>
        <name>AchFilesTrigger</name>
        <group>AchFulfillmentGroup</group>
        <description>AchFiles trigger to fire GenerateAchFilesJob</description>
        <job-name>GenerateAchFilesJob</job-name>
        <job-group>AchFulfillmentGroup</job-group>
        <misfire-instruction>SmartPolicy</misfire-instruction>
        <repeat-count>5</repeat-count>
        <repeat-interval>300000</repeat-interval>
      </simple>
      <!--<cron>
          <name>AchFilesTrigger</name>
          <group>AchFulfillmentGroup</group>
          <description>AchFiles trigger to fire GenerateAchFilesJob</description>
          <job-name>GenerateAchFilesJob</job-name>
          <job-group>AchFulfillmentGroup</job-group>
          <cron-expression>30 0/2 * * ? *</cron-expression>
        </cron>-->
      <!--every 5 minutes-->
      <!--<cron-expression>*/5 * * * *</cron-expression>-->
      <!--Every 2 hours at :30-->
    </trigger>
    
    <trigger>
      <simple>
        <name>AchFilesTrigger</name>
        <group>AchFulfillmentGroup</group>
        <description>AchFiles trigger to fire GenerateAchFilesJob</description>
        <job-name>CleanUpTransactionsJob</job-name>
        <job-group>AchFulfillmentGroup</job-group>
        <misfire-instruction>SmartPolicy</misfire-instruction>
        <repeat-count>-1</repeat-count>
        <repeat-interval>10000</repeat-interval>
      </simple>
    </trigger>
   
  </schedule>
  
</job-scheduling-data>